{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2018",
    "sourceMap": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },

  "exclude": ["node_modules", "dist"]
}
